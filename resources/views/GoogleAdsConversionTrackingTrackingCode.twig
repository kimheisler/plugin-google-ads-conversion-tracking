<script type="text/plain" data-cookie-consent="{{ config('GoogleAdsConversionTracking.consentGroup') }}.GoogleAdsConversionTracking" async src="https://www.googletagmanager.com/gtag/js?id={{ config("GoogleAdsConversionTracking.trackingId") }}"></script>
<script type="text/plain" data-cookie-consent="{{ config('GoogleAdsConversionTracking.consentGroup') }}.GoogleAdsConversionTracking">
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}

    gtag('consent', 'default', {
      'ad_storage': 'granted',
      'ad_user_data': 'granted',
      'ad_personalization': 'granted',
      'analytics_storage': 'granted'
    });

    {% set anonymizeIP = config("GoogleAdsConversionTracking.anonymizeIPs") == "true" %}
    {% if anonymizeIP  %}
        gtag('set', 'allow_ad_personalization_signals', false);
    {% endif %}

    gtag('js', new Date());

    gtag('config', '{{ config("GoogleAdsConversionTracking.trackingId") }}');
    
</script>
